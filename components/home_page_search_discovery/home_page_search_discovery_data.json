{
  "mainHead": "Search The National Archives and over 2,500 archives across the UK",
  "classNameContainer": "search-form-container",
  "id": "discovery-homepage-search-react-component",
  "form": {
    "formId": "discoveryHomePageSearch",
    "method": "get",
    "action": "/results/r",
    "role": "search",
    "grid": {
      "container": "grid-container",
      "group": {
        "headline": "Headline",
        "mainSearch": "MainSearch",
        "inputBetween": "InputBetween",
        "inputAnd": "InputAnd",
        "inputAcross": "InputAcross",
        "search": "Search",
        "moreOptions": "MoreOptions"
      }
    },
    "fieldShow": {
      "label": {
        "text": "Show",
        "class": "fixed-width",
        "for": "search-all-collections"
      },
      "input": {
        "name": "_q",
        "type": "text",
        "req": "required",
        "ariaRequired": "true",
        "id": "search-all-collections",
        "placeholder": "everything that contains these terms"
      },
      "errorMsg": "Please enter keyword or catalogue reference"
    },
    "fieldBetween": {
      "label": {
        "text": "between",
        "class": "fixed-width",
        "for": "start-date"
      },
      "input": {
        "id": "start-date",
        "name": "_sd",
        "placeholder": "YYYY",
        "type": "number",
        "class": "small"
      },
      "errorMsgLength": "Please enter a valid year, e.g. 1921",
      "errorMsgCurrentYear": "Please enter a valid year, e.g. 1922",
      "errorMsgDateRange": "Please enter both start date and end date",
      "errorMsgInvalid": "Please enter a valid year, e.g. 1923",
      "errorMsgEarlier": "Between date must be earlier than And date"
    },
    "fieldAnd": {
      "label": {
        "text": "and",
        "for": "start-date"
      },
      "input": {
        "id": "end-date",
        "name": "_ed",
        "placeholder": "YYYY",
        "type": "number",
        "class": "small"
      },
      "errorMsgLength": "Please enter a valid year, e.g. 1921",
      "errorMsgCurrentYear": "Please enter a valid year, e.g. 1922",
      "errorMsgDateRange": "Please enter both start date and end date",
      "errorMsgInvalid": "Please enter a valid year, e.g. 1923"
    },
    "fieldAcross": {
      "label": {
        "text": "across",
        "for": "held-by"
      },
      "select": {
        "id": "held-by",
        "class": "medium",
        "name": "_hb",
        "options": [
          { "name": "All records", "value": "all", "id": 1 },
          { "name": "The National Archives only", "value": "tna", "id": 2 },
          { "name": "Other archives only", "value": "oth", "id": 3 }
        ]
      }
    },
    "inputSearch": {
      "type": "submit",
      "title": "Search",
      "value": "Search"
    },
    "hiddenField": {
      "valueHidden": "y",
      "name": "_dhs",
      "type": "hidden"
    }
  },
  "links": {
    "moreOptions": {
      "url": "https://discovery.nationalarchives.gov.uk/advanced-search",
      "text": "More options"
    },
    "browse": {
      "url": "https://discovery.nationalarchives.gov.uk/browse",
      "text": "Browse"
    }
  },
  "gtm": {
    "success": {
      "event": "Discovery search",
      "eventAction": "Discovery homepage search",
      "eventCategory": "Successful search",
      "eventLabel": "Fields used :"
    },
    "fail": {
      "event": "Discovery search",
      "eventAction": "Discovery homepage search",
      "eventCategory": "Search errors",
      "eventLabel": ""
    }
  }
}
